<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ColorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp">

        <com.weatherdemo.customviews.WeatherReportTextView
            android:id="@+id/tvWeatherDay"
            style="@style/BlueTextNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/ivWeatherImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/weather_icon" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.weatherdemo.customviews.WeatherReportTextView
                    android:id="@+id/tvDay"
                    style="@style/BlueTextNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <com.weatherdemo.customviews.WeatherReportTextView
                    android:id="@+id/tvNight"
                    style="@style/BlueTextNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <com.weatherdemo.customviews.WeatherReportTextView
                android:id="@+id/tvWeatherCondition"
                style="@style/BlueTextNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.weatherdemo.customviews.WeatherReportTextView
                android:id="@+id/tvWind"
                style="@style/BlueTextNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.weatherdemo.customviews.WeatherReportTextView
                android:id="@+id/tvCoud"
                style="@style/BlueTextNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

